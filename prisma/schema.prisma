generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String         @id @default(cuid())
  name                    String?
  email                   String?        @unique
  emailVerified           DateTime?
  image                   String?
  accounts                Account[]
  collaboratedItineraries Collaborator[]
  comments                Comment[]      @relation("CommentAuthor")
  createdItineraries      Itinerary[]    @relation("ItineraryCreator")
  sessions                Session[]
  InviteToken             InviteToken[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Collaborator {
  userId      String
  itineraryId String
  itinerary   Itinerary @relation(fields: [itineraryId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, itineraryId])
}

model Itinerary {
  id            String         @id @default(cuid())
  name          String
  destination   String
  startDate     DateTime
  endDate       DateTime
  coverImage    String?
  creatorId     String?
  tempCreatorId String?
  position      Int            @default(0)
  collaborators Collaborator[]
  comments      Comment[]
  days          Day[]
  creator       User?          @relation("ItineraryCreator", fields: [creatorId], references: [id])
  InviteToken   InviteToken[]

  @@index([creatorId])
  @@index([startDate])
}

model Day {
  id          String     @id @default(cuid())
  date        DateTime
  itineraryId String
  position    Int        @default(0)
  activities  Activity[]
  itinerary   Itinerary  @relation(fields: [itineraryId], references: [id], onDelete: Cascade)

  @@index([itineraryId, position])
}

model Activity {
  id          String    @id @default(cuid())
  title       String
  description String?
  startTime   String?
  duration    Int?
  location    String?
  cost        Float?
  tags        String[]
  notes       String?
  dayId       String
  day         Day       @relation(fields: [dayId], references: [id], onDelete: Cascade)
  comments    Comment[]

  @@index([dayId])
}

model Comment {
  id           String     @id @default(cuid())
  text         String
  createdAt    DateTime   @default(now())
  authorId     String?
  tempAuthorId String?
  itineraryId  String?
  activityId   String?
  imageUrl     String?
  activity     Activity?  @relation(fields: [activityId], references: [id], onDelete: Cascade)
  author       User?      @relation("CommentAuthor", fields: [authorId], references: [id])
  itinerary    Itinerary? @relation(fields: [itineraryId], references: [id], onDelete: Cascade)

  @@index([itineraryId])
  @@index([activityId])
}

model City {
  geonameId       Int                 @id
  nameEn          String
  countryCode     String
  countryNameEn   String?
  countryNameZhTW String?
  countryNameJa   String?
  lat             Float
  lng             Float
  population      Int
  altNames        CityAlternateName[]
}

model CityAlternateName {
  id        Int     @id
  geonameId Int
  lang      String?
  name      String
  city      City    @relation(fields: [geonameId], references: [geonameId], onDelete: Cascade)

  @@index([geonameId])
  @@index([lang])
}

model InviteToken {
  id          String   @id @default(cuid())
  token       String   @unique
  itineraryId String
  email       String?
  inviterId   String?
  createdAt   DateTime @default(now())
  used        Boolean  @default(false)

  itinerary   Itinerary @relation(fields: [itineraryId], references: [id])
  inviter     User?     @relation(fields: [inviterId], references: [id])
}
